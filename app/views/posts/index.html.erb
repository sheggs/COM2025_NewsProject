<div class = "wrapper_breaking">
		<% if(@isEmpty)%>
		<%else %>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
  	<div class = "breaking">
  		<b>BREAKING NEWS</b>
  	</div>
						
			<% x = 0; %>
			<% @breakingPosts.each do |breaking| %>
				<% url = "/view?id=" + breaking.id.to_s %>
				<% if x == 0 %>
				<div class = "carousel-item active">
					<div class = "BreakingNewsContainer">
						<div class = "postContent">
							<div class = "postTitle">

	 					 	<%= content_tag :a, breaking.title, :href => url,:icon =>"",:class =>""%>
							</div>
							<div class = "postDescription">
								<p><%= breaking.summary%> </p>
							</div>
							<div class = "buttonContainer">
								<a class = "btn btn-primary" href = "#">Read More..</a>
							</div>
						</div>
					<div class = "creatorAvatar"> <%= image_tag AvatarsController.getAvatar(breaking.user_id).avatar.url, :class => "creator_avatar" %></div>
					<div class = "creatorData"><p><span id = "by">By</span> <%= UsersController.getUserData(breaking.user_id).name %></p> <br><p><%= UsersController.getUserData(breaking.user_id).created_at.strftime("%A %d %B %Y")    %></p></div>
					</div>

					<%= image_tag breaking.banner.url, :class => "d-block w-100" %>
				</div>
				<%else%>
						<div class = "carousel-item">
							<div class = "BreakingNewsContainer">
						<div class = "postContent">
							<div class = "postTitle">
								<a href = "#"><%= content_tag :a, breaking.title, :href => url,:icon =>"",:class =>""%></a>
							</div>
							<div class = "postDescription">
								<p><%= breaking.summary%> </p>
							</div>
						</div>
					<div class = "creatorAvatar"><%= image_tag AvatarsController.getAvatar(breaking.user_id).avatar.url, :class => "creator_avatar" %></div>
					<div class = "creatorData"><p><span id = "by">By</span> <%= UsersController.getUserData(breaking.user_id).name %></p> <br><p><%= UsersController.getUserData(breaking.user_id).created_at.strftime("%A %d %B %Y")    %></p></div>
					</div>

					<%= image_tag breaking.banner.url, :class => "d-block w-100" %>
						</div>

				<% end
				x =  x + 1; 
			 end 
		end%>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>

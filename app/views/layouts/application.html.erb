<!DOCTYPE html>
<html>
<head>
	<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
  <title>NewsSite</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
</head>
<body style = "margin:0;">
<div class = "app_wrapper">
	<div class="navbar">
	  <h1 class = "title_padding">News Site</h1>
	  <% array = [["Home","/","fas fa-home",""],["Search","#","fas fa-home",""],["Login","/login","fas fa-home","btn btn-primary"] ] %>
	  <% if(session[:user_id] != nil) %>
	  <% array = [["Home","/","fas fa-home",""],["Search","#","fas fa-home",""],["Dashboard","/Dashboard","",""],["custom_override","","",""],["Logout","/logout","fas fa-home","btn btn-danger"] ] %>
	  <%end%>
	  <div class="navitem">
	 	 <!-- <a :href="tab.href"><i :class="tab.icon"> </i></a> -->
	 	<% x = 0 %>
	 	<% while (x<array.length) do %>
	 	<%=  %>
	 	<% if(array[x][0] == "custom_override") and (session[:user_id] != nil) %>
	 		<% if(@avatar != nil) %>
	 			<%= image_tag @avatar.avatar.url, :class => "avatar2" %>
	 		<% else %>
	 			<%= image_tag "grey.jpg", :class => "avatar2" %>
	 		<%end%>
	 	<% else %>
	  	<%= content_tag :a, array[x][0], :href => array[x][1],:icon =>array[x][2],:class => array[x][3]%>
	   	<%end %>
	  	 	<% x = x + 1 %>

	   	<%end %>

	   	<%@queryUser = User.find_by(id: session[:user_id])%>
	   	<% if(@queryUser != nil) %>
	   		<%if(@queryUser.admin) %>
	   			<%= content_tag :a, "Admin Dashboard", :href => "/admin",:icon =>"",:class => ""%>

	   		<%end%>
	   		<%end%>

	  </div>
</div>
</div>
<%= yield %>

</body>
</html>
